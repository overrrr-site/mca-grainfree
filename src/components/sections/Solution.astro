    font-weight: 900;
    letter-spacing: 1.07px;
    line-height: normal;
  }

  /* Animations */
  @keyframes cta-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(255, 81, 0, 0.4);
    }
    50% {
      box-shadow: 0 0 12px 4px rgba(255, 81, 0, 0.25);
    }
  }

  @keyframes cta-shine {
    0% {
      left: -100%;
    }
    20% {
      left: 100%;
    }
    100% {
      left: 100%;
    }
  }
