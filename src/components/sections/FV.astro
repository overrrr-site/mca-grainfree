<div class="section" style="background:#fefbf4">
  <div class="screen-wrapper">
    <div class="fv screen">
      <img class="fv__hero" src="/img/fv-1.svg" alt="メディコートアドバンス グレインフリー" />
      <img class="fv__swipe-line" src="/img/line-1.svg" alt="" />
      <div class="fv__swipe-text">swipe</div>
      <div class="fv__cta">
        <div class="fv__cta-badge">
          <div class="fv__cta-badge-text">お一人様1回限りの限定価格</div>
          <img class="fv__cta-badge-line" src="/img/vector-4.svg" alt="" />
        </div>
        <a href="#cta" data-lp="grainfree" data-cta="fv" class="fv__cta-button">
          <div class="fv__cta-button-inner">
            <div class="fv__cta-button-bg"></div>
            <img class="fv__cta-button-arrow" src="/img/vector-1-3.svg" alt="" />
            <div class="fv__cta-button-text">今すぐ試す</div>
          </div>
          <img class="fv__cta-button-label" src="/img/group-23@2x.webp" alt="今すぐ試す" />
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  /* Section & wrapper */
  .section {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    height: 100dvh;
    min-height: 100vh;
    min-height: 100dvh;
    padding-bottom: 55px;
    overflow: hidden;
    scroll-snap-align: start;
  }

  .screen-wrapper {
    position: relative;
    overflow: hidden;
  }

  /* Main screen */
  .fv {
    position: relative;
    width: 440px !important;
    height: 959px !important;
    background-color: var(--background-02);
    overflow: hidden !important;
    will-change: transform;
  }

  /* Hero image */
  .fv__hero {
    position: absolute;
    top: 0;
    left: 0;
    width: 440px;
    height: 960px;
    object-fit: cover;
  }

  /* Swipe indicator */
  .fv__swipe-line {
    position: absolute;
    top: 831px;
    left: 50%;
    width: 1px;
    height: 21px;
    object-fit: cover;
    animation: swipe-bounce 1.5s ease-in-out infinite;
  }

  .fv__swipe-text {
    position: absolute;
    top: 807px;
    left: calc(50% - 21px);
    color: #444444;
    font-size: var(--font-size-l);
    font-weight: 400;
    letter-spacing: 0.80px;
    line-height: normal;
    animation: swipe-bounce 1.5s ease-in-out infinite;
  }

  /* CTA area */
  .fv__cta {
    position: absolute;
    top: 644px;
    left: calc(50% - 191px);
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 382px;
    gap: 4px;
  }

  .fv__cta-badge {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 205px;
  }

  .fv__cta-badge-text {
    color: var(--orange);
    font-size: 15.4px;
    font-weight: 700;
    letter-spacing: 0.62px;
    line-height: 23.1px;
    transform: rotate(-0.10deg);
  }

  .fv__cta-badge-line {
    width: 205px;
    height: 9.83px;
  }

  /* CTA button */
  .fv__cta-button {
    position: relative;
    display: block;
    width: 381.89px;
    height: 116.93px;
  }

  .fv__cta-button-inner {
    position: absolute;
    top: 60px;
    left: 69px;
    width: 247px;
    height: 57px;
  }

  .fv__cta-button-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 245px;
    height: 57px;
    background-color: var(--orange);
    border-radius: 87.33px;
    overflow: hidden;
    animation: cta-glow 2s ease-in-out infinite;
  }

  .fv__cta-button-bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 60%;
    height: 100%;
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.25) 50%, transparent 100%);
    animation: cta-shine 3s ease-in-out infinite;
    pointer-events: none;
  }

  .fv__cta-button-arrow {
    position: absolute;
    top: 20px;
    left: 210px;
    width: 10px;
    height: 17px;
  }

  .fv__cta-button-text {
    position: absolute;
    top: 10px;
    left: 61px;
    color: var(--white);
    font-size: 21.8px;
    font-weight: 900;
    letter-spacing: 1.09px;
    line-height: normal;
  }

  .fv__cta-button-label {
    position: absolute;
    top: 0;
    left: calc(50% - 191px);
    width: 382px;
    height: 60px;
  }

  /* Animations */
  @keyframes swipe-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(6px);
    }
  }

  @keyframes cta-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(255, 81, 0, 0.4);
    }
    50% {
      box-shadow: 0 0 12px 4px rgba(255, 81, 0, 0.25);
    }
  }

  @keyframes cta-shine {
    0% {
      left: -100%;
    }
    20% {
      left: 100%;
    }
    100% {
      left: 100%;
    }
  }
</style>
